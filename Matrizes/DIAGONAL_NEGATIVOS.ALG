Algoritmo "diagonal_negativos"
//
//

//Fazer um programa para ler um número inteiro N (máximo = 10) e
//uma matriz quadrada de ordem N
//contendo números inteiros. Em seguida, mostrar a diagonal principal
//e a quantidade de valores
//negativos da matriz.

Var
   i,j,n,cont: inteiro
   mat: vetor [0..9,0..9] de inteiro
Inicio

   escreva("Qual a ordem da matriz?: ")
   leia(n)

   enquanto n > 10 faca
      escreval("Ordem no maximo é de 10, tente novamente!")
      escreva("Qual a ordem da matriz?: ")
      leia(n)
   fimenquanto

   para i de 0 ate n-1 faca
      para j de 0 ate n-1 faca
         escreva("Elemento" , " [", i ,",", j ,"]: ")
         leia(mat[i , j])
      fimpara
   fimpara

   escreva("DIAGONAL PRINCIPAL: ")

   para i de 0 ate n-1 faca
      escreva(mat[i , i], " ")
   fimpara

   escreval

   cont <- 0

   para i de 0 ate n-1 faca
      para j de 0 ate n-1 faca
         se mat[i , j] < 0 entao
            cont <- cont + 1
         fimse
      fimpara
   fimpara

   escreva("QUANTIDADE DE NEGATIVOS = ", cont)

Fimalgoritmo